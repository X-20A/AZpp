{
    "name": "AZ++",
    "version": "1.0.0",
    "manifest_version": 3,
    "description": "青空文庫UI拡張",
    "permissions": [
        "storage",
        "declarativeNetRequest"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "*://localhost/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.aozora.gr.jp/cards/*/files/*.html"
            ],
            "js": [
                "main.js",
                "dexie.min.js"
            ],
            "css": [
                "style.css"
            ]
        }
    ],
    "declarative_net_request": {
        "rule_resources": [
            {
                "enabled": true,
                "id": "ruleset",
                "path": "rules.json"
            }
        ]
    },
    "web_accessible_resources": [
        {
            "resources": [
                "style.css",
                "icons/*"
            ],
            "matches": [
                "https://www.aozora.gr.jp/*"
            ]
        }
    ]
}