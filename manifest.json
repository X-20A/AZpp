{
    "name": "AZ++",
    "version": "1.0.0",
    "manifest_version": 3,
    "description": "青空文庫UI拡張",
    "permissions": [
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.aozora.gr.jp/cards/*/files/*.html"
            ],
            "js": [
                "main.js",
                "dexie.min.js"
            ],
            "css": [
                "style.css"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "style.css",
                "icons/*"
            ],
            "matches": [
                "https://www.aozora.gr.jp/*"
            ]
        }
    ]
}